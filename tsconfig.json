{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": false,
        "esModuleInterop": true,
        "lib": ["es2020", "ES2018.Promise"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "bin",
        "removeComments": true,
        "sourceMap": false,
        "strict": true,
        "target": "es6",
        "typeRoots": ["./node_modules/@types"],
        "types": ["jest", "node"],
        "watch": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
